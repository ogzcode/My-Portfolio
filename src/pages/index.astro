import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['Javascript', 'Python', 'Dart(Beginner)']
const frontend = ['HTML/CSS', 'React', 'Vue', 'Tailwind', 'Astro', 'Next']
const backend = [
	'Flask',
	'FastAPI',
	'Node/Express.js',
